@model WebQLKS.Models.tbl_PhieuThuePhong

@{
    ViewBag.Title = "DatPhong";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container card w-75">
    <h2 class="text-center">Đặt phòng</h2>
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
        <script type="text/javascript">
            setTimeout(function() {
                window.location.href = '@Url.Action("DanhSachPhong", "Room")';
            }, 3000); // Chuyển trang sau 3 giây
        </script>
    }
    else if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }
    @using (Html.BeginForm("DatPhong", "Room", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4 class="text-center">Mời nhập số lượng người</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                Số lượng khách
                <div class="col-md-10">
                    <input type="number" class="form-control" id="SLK" name="SLK" required />
                </div>
            </div>

            <div class="form-group">
                Số lượng khách nước ngoài
                <div class="col-md-10">
                    <input type="number" class="form-control" id="SLNN" name="SLNN" required />
                </div>
            </div>
            <input type="hidden" id="maPhong" name="maPhong" value="@ViewBag.MP" />

            <div class="form-group mt-2">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Đặt Phòng" class="btn btn-success" />
                </div>
            </div>
        </div>
    }

    <div>
        <button type="button" class="btn btn-default" onclick="history.back();">Quay lại</button>
    </div>
</div>
