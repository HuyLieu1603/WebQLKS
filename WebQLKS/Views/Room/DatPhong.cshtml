@model WebQLKS.Models.tbl_PhieuThuePhong

@{
    ViewBag.Title = "DatPhong";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>DatPhong</h2>

@using (Html.BeginForm("DatPhong", "Room", FormMethod.Post))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>tbl_PhieuThuePhong</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.SLKhach, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="number" class="form-control" id="SLK" name="SLK" required/>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.SLKhachNuocNgoai, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="number" class="form-control" id="SLNN" name="SLNN" required/>
        </div>
    </div>
    <input type="hidden" id="maPhong" name="maPhong" value="@ViewBag.MP" />

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Đặt Phòng" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
