@model IEnumerable<WebQLKS.Models.tbl_Phong>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Mã Phòng
        </th>
        <th>
            Số Phòng
        </th>
        <th>
            Hình Ảnh
        </th>
        <th>
            Loại Phòng
        </th>
        <th>
            Trạng Thái
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.MaPhong)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.SoPhong)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.HinhAnh)
    </td>
