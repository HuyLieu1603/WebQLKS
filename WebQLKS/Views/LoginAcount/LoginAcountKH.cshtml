@model WebQLKS.Models.tbl_KhachHang


@{
    ViewBag.Title = "LoginAcountKH";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <meta charset="UTF-8">
}

<style>
    .field-validation-error {
        color: rgb(223, 101, 92);
    }

    .background {
        margin: 0px;
        padding: 0px;
        color: white;
        height: 100vh;
        background-image: url('/Content/Home/Image/image_bg.jpg');
        background-size: cover;
    }

    .form-login {
        display: grid;
        place-items: center; /* Căn giữa theo cả chiều ngang và chiều dọc */
        height: 100vh;
        width: 100%;
    }

    .word-font {
        color: white
    }

    .form-login>form {
        border: 1px solid white;
        width: fit-content;
        padding: 5%;
        border-radius: 30px;
        background-color: rgba(14, 210, 199, 0.79) /* Xanh lam trong suốt 50% */;
    }
</style>

<div class="container-fluid background">
    <div class="form-login">
        @using (Html.BeginForm("LoginAcountKH", "LoginAcount", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
        <form>
            <h1 class="mb-3 fw-bold text-center">ĐĂNG NHẬP</h1>

            <div class="form-floating d-flex flex-column w-100">
                <div><label for="floatingInput">Tài khoản</label></div>
                <input type="text" class="form-control" id="TaiKhoan" name="TaiKhoan" placeholder="Mời nhập tài khoản..." required>
            </div>
            <div class="form-floating d-flex flex-column w-100">
                <div><label for="floatingPassword">Mật khẩu</label></div>
                <input type="password" class="form-control w-100" id="MatKhau" name="MatKhau" placeholder="Nhập mật khẩu..." required>
            </div>

            <div class="form-check text-start my-3">
                <input class="form-check-input" type="checkbox" value="remember-me" id="flexCheckDefault">
                <label class="form-check-label" for="flexCheckDefault">
                    Ghi nhớ đăng nhập
                </label>
            </div>
            @if (ViewBag.ErroInfo != null)
            {
                <p class="field-validation-error fw-bold">@ViewBag.ErroInfo</p>
            }
            <button class="btn btn-primary w-100 py-2" type="submit" style="margin-top:10px">Đăng nhập</button>
            <a class="word-font" href="/LoginAcount/RegisterKH">Tạo tài khoản</a>
        </form>
            
        }

    </div>
</div>