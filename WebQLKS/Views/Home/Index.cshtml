@model IEnumerable<WebQLKS.Models.tbl_LoaiPhong>

@{
    ViewBag.Title = "Trang Chủ";
}
<style>
    .carousel-item img {
        max-width: 100%;
        height: 700px;
        object-fit: cover;
    }

    h6, .heading-6 {
        font-family: "Montserrat", Helvetica, Arial, sans-serif;
        font-size: 14px;
        text-transform: uppercase;
    }

    h1, h2, h3, h4, h5, h6, p {
        margin-top: 0;
        margin-bottom: 0;
        font-family: "Playfair Display", "Times New Roman", Times, serif;
        font-weight: 400;
    }

    .line {
        display: -webkit-box;
        -webkit-box-orient: vertical;
        -webkit-line-clamp: 3;
        overflow: hidden;
    }

    .row-img {
        margin: 10px;
        max-height: 100%;
        max-width: 100%;
    }

    img {
        object-fit: cover;
        width: 100%;
        height: 100%;
    }

    .card {
        height: 350px;
        display: flex;
        flex-direction: row;
        margin: 10px;
    }
</style>
<link href="~/Content/Home.css" rel="stylesheet">
@*Tạo slide show*@
<div id="carouselExampleDark" class="carousel carousel-dark slide">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active" data-bs-interval="10000">
            <img src="~/Content/Home/Image/image_bg.jpg" class="d-block w-100" alt="...">
            <div class="carousel-caption d-none d-md-block">
                <h5 style="font-weight: bolder; color: white; background-color: rgb(0 0 0 / 0.50)">Huflit Hotel</h5>
                <p style="font-weight: bold; color: white; background-color: rgb(0 0 0 / 0.50)">Nơi nghỉ dưỡng lý tưởng của mọi nhà.</p>
            </div>
        </div>
        <div class="carousel-item" data-bs-interval="2000">
            <img src="~/Content/Home/Image/spa.jpg" class="d-block w-100" alt="...">
            <div class="carousel-caption d-none d-md-block">
                <h5 style="font-weight: bolder; color: white; background-color: rgb(0 0 0 / 0.50)">Dịch vụ Spa</h5>
                <p style="font-weight: bold; color: white; background-color: rgb(0 0 0 / 0.50)">Đẹp hơn mỗi ngày.</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/Content/Home/Image/NhaHang.jpg" class="d-block w-100" alt="...">
            <div class="carousel-caption d-none d-md-block">
                <h5 style="font-weight: bolder; color: white; background-color: rgb(0 0 0 / 0.50)">Nhà hàng sang trọng</h5>
                <p style="font-weight: bold; color: white; background-color: rgb(0 0 0 / 0.50)">Nhà hàng chuẩn 5 sao.</p>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>
<hr />
@*Hiển thị các dạng phòng*@
<div class="container mt-3">
    <div class="row justify-content-lg-center">
        <div class="col-lg-10 col-xl-8" style="text-align:center">
            <h6>Có nhiều phòng...</h6>
            <h2>Rooms &amp; Suites</h2>
            <p>
                Huflix Hotel có 35 phòng cổ điển được trang bị nội thất trang nhã và máy lạnh, đây sẽ là lựa chọn hoàn hảo cho cả khách doanh nhân và khách du lịch...
            </p>
        </div>
    </div>
    <div class="row mt-5 room-list">
        @foreach (var item in Model)
        {
            <div class="card">
                <div class="col-md-6 mb-5 m-3">
                    <h2>@Html.DisplayFor(modelItem => item.TenLoaiPhong)</h2>
                    <p class="line">
                        @Html.DisplayFor(modelItem => item.MoTa)
                    </p>
                    <div class="mt-3"><p class="d-flex justify-content-end">Giá phòng: @Html.DisplayFor(modelItem => item.DonGia)</p></div>
                    <div>
                        <p class="d-flex align-self-end">

                            @Html.ActionLink("Chi tiết", "DetailRoom", "Room", new { MaLoaiPhong = item.MaLoaiPhong }, new { @class = "btn btn-success" })
                        </p>
                    </div>
                </div>
                <div class="col-md-5 row-img">
                    <img src="~/Content/Home/Image/@item.img" />
                </div>
            </div>
        }
    </div>
</div>
