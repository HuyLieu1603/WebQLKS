@model WebQLKS.Models.tbl_NhanVien

@{
    Layout = null;
}

<!DOCTYPE html>
<html class="container-fluid" style="margin:0px;">
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Login</title>
        <style>
            .field-validation-error {
                color: red;
            }

            .background {
                padding:0px;
                color: white;
                height: 100vh;
                background-image: url('/Content/Home/Image/image_bg.jpg');
                background-size: cover;
            }

            .form-login {
                display: grid;
                place-items: center; /* Căn giữa theo cả chiều ngang và chiều dọc */
                height: 100vh;
                width: 100%;
            }

            .word-font {
                color: white
            }
        </style>
    </head>

    <body>
        <div class="container-fluid background">
            <div class="form-login">
                @using (Html.BeginForm("Login", "Admin", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <form>

                        <h1 class="h3 mb-3 fw-normal">ĐĂNG NHẬP</h1>

                        <div class="form-floating">
                            <input type="text" class="form-control" id="TaiKhoan" name="TaiKhoan" placeholder="Tên người dùng">
                            <label for="floatingInput">Tài khoản</label>
                        </div>
                        <div class="form-floating">
                            <input type="password" class="form-control" id="MatKhau" name="MatKhau" placeholder="12345">
                            <label for="floatingPassword">Mật khẩu</label>
                        </div>

                        <div class="form-check text-start my-3">
                            <input class="form-check-input" type="checkbox" value="remember-me" id="flexCheckDefault">
                            <label class="form-check-label" for="flexCheckDefault">
                                Ghi nhớ đăng nhập
                            </label>
                        </div>
                        <button class="btn btn-primary w-100 py-2" type="submit">Đăng nhập</button>
                    </form>
                }
            </div>
        </div>
    </body>
</html>
