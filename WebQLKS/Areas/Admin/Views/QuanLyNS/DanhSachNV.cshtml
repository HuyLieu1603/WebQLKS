@model IEnumerable<WebQLKS.Models.tbl_NhanVien>

@{
    ViewBag.Title = "DanhSachNV";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}

<h2>DanhSachNV</h2>
<table>
    <button>
        @Html.ActionLink("Thêm nhân viên", "ThemNhanVien")
    </button>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HoTen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TaiKhoan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MatKhau)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgaySinh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tbl_ChucVu.TenChucVu)
            </td>
            <td>
                @Html.ActionLink("Chỉnh sửa thông tin nhân viên", "EditNV", new { maNV = item.MaNV }) |
                @Html.ActionLink("Xem thông tin nhân viên", "ChiTietNV", new { maNV = item.MaNV }) |
                @Html.ActionLink("Xóa nhân viên", "XoaNV", new { maNV = item.MaNV })
            </td>
        </tr>
    }
</table>
