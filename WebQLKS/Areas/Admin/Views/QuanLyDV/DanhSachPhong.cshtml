@model IEnumerable<WebQLKS.Models.tbl_Phong>

@{
    ViewBag.Title = "DanhSachPhong";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}
<style>
    table{
        border: 1px solid black;
        text-align:center;
    }
    td>img{
        width:100%;
        height:100%;
        object-fit:cover;
    }
    td{
        width:50px;
        height:200px;
    }
    
</style>

<div class="container">
    <h2>Danh Sách Phòng</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                Số Phòng
            </th>
            <th>
                Hình Ảnh
            </th>
            <th>
                Loại Phòng
            </th>
            <th>
                Trạng Thái
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SoPhong)
                </td>
                <td>
                    <img src="~/Content/Room/img/@item.HinhAnh" alt="Alternate Text" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tbl_LoaiPhong.TenLoaiPhong)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tbl_TrangThaiPhong.TenTrangThai)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.MaPhong }) |
                    @Html.ActionLink("Details", "Details", new { id = item.MaPhong }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.MaPhong })
                </td>
            </tr>
        }

    </table>

</div>